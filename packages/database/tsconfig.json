{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@models/*": ["src/models/*"]
    }
  },
  "include": ["**/*.d.ts", "src/**/*.ts"],
  "exclude": ["dist", "node_modules"],
}
