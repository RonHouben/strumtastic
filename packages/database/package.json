{
  "name": "database",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "docker-compose up -d",
    "lint": "eslint *.ts*",
    "build": "tsc --build",
    "migrate:gen": "drizzle-kit generate:pg",
    "migrate:push": "dotenv -e ../../.env -- ts-node --esm src/migrate.ts",
    "seed": "dotenv --e ../../.env -- ts-node --esm src/seeds/index.ts"
  },
  "dependencies": {
    "@vercel/postgres": "^0.4.0",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.4.3",
    "postgres": "^3.3.5"
  },
  "devDependencies": {
    "drizzle-kit": "^0.19.1",
    "eslint-config-custom": "*",
    "ts-node": "^10.9.1",
    "tsconfig": "*"
  }
}
