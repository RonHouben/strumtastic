{
  "name": "database",
  "main": "./index.ts",
  "types": "./index.ts",
  "scripts": {
    "db:start": "docker compose up -d",
    "lint": "eslint *.ts*",
    "prisma:generate:cloud": "prisma generate",
    "prisma:generate:local": "prisma generate",
    "prisma:db:push": "prisma db push --skip-generate",
    "prisma:db:migrate:cloud": "prisma migrate dev",
    "prisma:db:migrate:local": "prisma migrate dev",
    "prisma:db:seed:cloud": "npx prisma db seed",
    "prisma:db:seed:local": "npx prisma db seed"
  },
  "dependencies": {
    "@prisma/client": "^4.11.0"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "prisma": "^4.11.0",
    "ts-node": "^10.9.1"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma",
    "seed": "ts-node ./prisma/seeds/index.ts"
  }
}
