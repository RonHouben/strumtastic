{
  "extends": "tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../apps/web/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ui/*": [
        "*"
      ],
      "@server/*": [
        "../../apps/web/src/server/*"
      ],
      "@config/*": [
        "../../apps/web/src/config/*"
      ]
    },
    "plugins": [{ "name": "next" }
    ],
    "strictNullChecks": true,
  }
}
