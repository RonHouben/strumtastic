{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^prisma:generate:cloud"
      ],
      "outputs": ["dist/**"]
    },
    "audio-engine:build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "web:build": {
      "dependsOn": ["audio-engine:build"],
      "env": ["VERCEL_URL", "PORT", "NODE_ENV"],
      "outputs": [".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["prisma:db:seed:local"],
      "cache": false,
      "persistent": true
    },
    "db:start": {
      "cache": false,
      "persistent": true
    },
    "prisma:db:migrate:local": {
      "dependsOn": ["db:start"],
      "cache": false
    },
    "prisma:db:seed:local": {
      "dependsOn": ["prisma:db:migrate:local"],
      "cache": false
    },
    "prisma:db:migrate:cloud": {
      "cache": false
    },
    "prisma:db:seed:cloud": {
      "dependsOn": ["prisma:db:migrate:cloud"],
      "cache": false
    },
    "prisma:generate:cloud": {
      "dependsOn": ["prisma:db:seed:cloud"],
      "cache": false
    }
  }
}
