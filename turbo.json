{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [],
      "outputs": [
        "dist/**"
      ]
    },
    "audio-engine:build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**"
      ]
    },
    "database:build": {
      "dependsOn": [
        "^build"
      ],
      "env": ["FIREBASE_CLIENT_EMAIL", "FIREBASE_PRIVATE_KEY", "FIREBASE_PROJECT_ID"],
      "outputs": [
        "build/**"
      ]
    },
    "web:build": {
      "dependsOn": [
        "audio-engine:build"
      ],
      "env": [
        "VERCEL_URL",
        "PORT",
        "NODE_ENV",
        "FIREBASE_CLIENT_EMAIL", "FIREBASE_PRIVATE_KEY", "FIREBASE_PROJECT_ID"
      ],
      "outputs": [
        ".next/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": [
        "db:seed"
      ],
      "cache": false,
      "persistent": true
    },
    "db:seed": {
      "cache": false
    }
  }
}